<!-- Hero Section-->
<section style="background: url('assets/hero-bg.jpg') no-repeat;" class="hero d-flex align-items-center">
  <div class="container">
    <p class="small-text-hero"><i class="icon-localizer text-primary mr-1"></i>Lorem ipsum <span class="text-primary">dolor sit</span> amet</p>
    <h1>Let's <span class="text-primary">go    </span> anywhere</h1>
    <p class="text-hero">Lorem ipsum dolor sit amet, consectetur adipiscing elit</p>
    <div class="search-bar">
      <%= form_tag('#', method: :get) do %>
        <div class="row">
          <div class="form-group col-lg-4">
            <%= select_tag(
              :country, options_for_select(@countries.map{|country| [country, country]}),
              title: "Select Country <i class='fa fa-angle-down'></i>",
              class: 'listing-categories',
              id: 'countries_select'
            ) %>
          </div>
          <div class="form-group col-lg-3">
            <%= select_tag(
              :state, options_for_select(@states.collect { |state| [state, state]}),
              title: "Select State <i class='fa fa-angle-down'></i>",
              class: 'listing-categories',
              id: 'states_select'
            ) %>
          </div>
          <div class="form-group col-lg-3">
            <%= select_tag(
              :state, options_for_select(@cities.collect { |city| [city, city]}),
              title: "Select City <i class='fa fa-angle-down'></i>",
              class: 'listing-categories',
              id: 'cities_select'
            ) %>
          </div>
          <div class="form-group col-lg-2">
            <input type="submit" value="Search" class="submit">
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
